{
    "name": "thtg88/sinker-api",
    "type": "project",
    "description": "The REST API backing thtg88/sinker, to keep track of the app's status.",
    "keywords": ["file", "s3", "sync", "api"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.0.1",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.5",
        "sentry/sentry-laravel": "^4.0"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^3.0",
        "brianium/paratest": "^7.0",
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^11.0",
        "psalm/plugin-laravel": "^3.0",
        "spatie/laravel-ignition": "^2.0",
        "thtg88/laravel-db-scaffold-commands": "^0.7.0",
        "vimeo/psalm": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "optimize-laravel-cmd": [
            "@php artisan event:cache",
            "@php artisan config:cache",
            "@php artisan route:cache"
        ],
        "ci": [
            "@check-style",
            "@stan",
            "@test --stop-on-failure"
        ],
        "check-style": "vendor/bin/php-cs-fixer fix --using-cache=no --diff --dry-run",
        "fix-style": "vendor/bin/php-cs-fixer fix --using-cache=no",
        "stan": "vendor/bin/psalm --no-cache",
        "test": "@php artisan test --parallel --recreate-databases"
    },
    "extra": {
        "hooks": {
            "pre-commit": "vendor/bin/php-cs-fixer fix --using-cache=no --diff --dry-run"
        },
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": false
        }
    },
    "prefer-stable": true
}
